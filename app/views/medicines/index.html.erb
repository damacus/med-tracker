<div class="container mx-auto px-4 py-8">
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Medicines</h1>
    <%= link_to "Add Medicine", new_medicine_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @medicines.each do |medicine| %>
      <div id="medicine_<%= medicine.id %>" class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2"><%= medicine.name %></h2>
        <p class="text-gray-600 mb-4"><%= medicine.description %></p>
        <p class="text-sm text-gray-500 mb-4">Standard dosage: <%= medicine.standard_dosage %></p>
        
        <div class="flex justify-end space-x-2">
          <%= link_to "View", medicine_path(medicine), class: "text-blue-500 hover:text-blue-700" %>
          <%= link_to "Edit", edit_medicine_path(medicine), class: "text-yellow-500 hover:text-yellow-700" %>
          <%= button_to "Delete", medicine_path(medicine), method: :delete, class: "text-red-500 hover:text-red-700",
              data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
