<div class="mx-auto flex max-w-3xl flex-col space-y-8">
  <% if notice.present? %>
    <div class="rounded-md border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
      <%= notice %>
    </div>
  <% end %>

  <header class="space-y-2">
    <p class="text-sm font-medium uppercase tracking-wide text-slate-500">Medicine profile</p>
    <h1 class="text-4xl font-semibold text-slate-900"><%= @medicine.name %></h1>
  </header>

  <div class="grid gap-6 sm:grid-cols-2">
    <div class="sm:col-span-2 rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-sm font-medium text-slate-500">Description</h2>
      <p class="mt-2 text-base text-slate-700"><%= @medicine.description.presence || 'No description provided.' %></p>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-sm font-medium text-slate-500">Standard dosage</h2>
      <p class="mt-2 text-2xl font-semibold text-slate-900">
        <% if @medicine.dosage_amount.present? && @medicine.dosage_unit.present? %>
          <%= @medicine.dosage_amount %>
          <span class="text-base font-medium text-slate-600"><%= @medicine.dosage_unit %></span>
        <% else %>
          <span class="text-base font-medium text-slate-600">Not specified</span>
        <% end %>
      </p>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-sm font-medium text-slate-500">Current supply</h2>
      <p class="mt-2 text-2xl font-semibold text-slate-900"><%= @medicine.current_supply || 0 %></p>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-sm font-medium text-slate-500">Stock on hand</h2>
      <p class="mt-2 text-2xl font-semibold text-slate-900"><%= @medicine.stock || 0 %></p>
    </div>

    <% if @medicine.warnings.present? %>
      <div class="sm:col-span-2 rounded-lg border border-amber-200 bg-amber-50 p-6 shadow-sm">
        <h2 class="text-sm font-medium text-amber-700">Warnings</h2>
        <p class="mt-2 text-base text-amber-800"><%= @medicine.warnings %></p>
      </div>
    <% end %>
  </div>

  <div class="flex items-center gap-3">
    <%= link_to 'Edit medicine', edit_medicine_path(@medicine),
          class: 'inline-flex items-center rounded-md bg-violet-600 px-4 py-2 text-sm font-medium text-white shadow-sm transition hover:bg-violet-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-400' %>
    <%= link_to 'Back to list', medicines_path,
          class: 'inline-flex items-center rounded-md border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-50' %>
  </div>
</div>
