<div class="container mx-auto px-4 py-8">
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-3xl font-bold mb-4"><%= @medicine.name %></h1>
      
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Description</h2>
        <p class="text-gray-600"><%= @medicine.description %></p>
      </div>
      
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Standard Dosage</h2>
        <p class="text-gray-600"><%= @medicine.standard_dosage %></p>
      </div>

      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Recommended Dosages by Age</h2>
        <% if @medicine.recommended_dosages.any? %>
          <div class="bg-white rounded-lg border border-gray-200 divide-y">
            <% @medicine.recommended_dosages.order(:min_age).each do |dosage| %>
              <div class="p-4">
                <h3 class="font-medium text-gray-900"><%= dosage.description %></h3>
                <p class="mt-1 text-gray-600"><%= dosage.dosage_instruction %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-600">No recommended dosages available.</p>
        <% end %>
      </div>
      
      <% if @medicine.warnings.present? %>
        <div class="mb-6">
          <h2 class="text-lg font-semibold text-red-700 mb-2">Warnings</h2>
          <p class="text-red-600"><%= @medicine.warnings %></p>
        </div>
      <% end %>
    </div>
    
    <div class="px-6 py-4 bg-gray-50 border-t">
      <div class="flex justify-end space-x-4">
        <%= link_to "Edit", edit_medicine_path(@medicine), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back", medicines_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div>
