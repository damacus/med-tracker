<div>
  <% if notice %>
    <div>
      <span><%= notice %></span>
    </div>
  <% end %>

  <div>
    <div>
      <h1><%= @medicine.name %></h1>

      <div>
        <h2>Description</h2>
        <p><%= @medicine.description %></p>
      </div>

      <div>
        <h2>Standard Dosage</h2>
        <p><%= @medicine.standard_dosage %></p>
      </div>

      <div>
        <h2>Recommended Dosages by Age</h2>
        <% if @medicine.recommended_dosages.any? %>
          <div>
            <% @medicine.recommended_dosages.order(:min_age).each do |dosage| %>
              <div>
                <h3><%= dosage.description %></h3>
                <p><%= dosage.dosage_instruction %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>No recommended dosages available.</p>
        <% end %>
      </div>

      <% if @medicine.warnings.present? %>
        <div>
          <h2>Warnings</h2>
          <p><%= @medicine.warnings %></p>
        </div>
      <% end %>
    </div>

    <div>
      <div>
        <%= link_to "Edit", edit_medicine_path(@medicine), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back", medicines_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div>
