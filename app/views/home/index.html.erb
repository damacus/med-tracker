<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-4">Medicine Tracker</h1>
  <p class="text-gray-600 mb-8">Welcome to your personal medicine tracking application.</p>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <%= link_to medicines_path, class: "bg-white shadow rounded-lg p-6 hover:shadow-lg transition-shadow duration-200" do %>
      <h2 class="text-xl font-semibold mb-2">Medicines</h2>
      <p class="text-gray-600">Manage your medicine inventory</p>
    <% end %>

    <%= link_to people_path, class: "bg-white shadow rounded-lg p-6 hover:shadow-lg transition-shadow duration-200" do %>
      <h2 class="text-xl font-semibold mb-2">People</h2>
      <p class="text-gray-600">Manage people and their prescriptions</p>
    <% end %>
  </div>
</div>
