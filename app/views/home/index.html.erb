<div class="home">
  <div class="home__header">
    <h1 class="home__title">Medicine Tracker</h1>
    <p class="home__subtitle">Welcome to your personal medicine tracking application.</p>
  </div>

  <div class="home__cards">
    <%= link_to medicines_path, class: "home__card" do %>
      <h2 class="home__card-title">Medicines</h2>
      <p class="home__card-text">Manage your medicine inventory</p>
    <% end %>

    <%= link_to people_path, class: "home__card" do %>
      <h2 class="home__card-title">People</h2>
      <p class="home__card-text">Manage people and their prescriptions</p>
    <% end %>
  </div>
</div>
