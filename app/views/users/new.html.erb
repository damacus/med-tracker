<div class="mx-auto flex max-w-lg flex-col space-y-8" data-testid="sign-up">
  <header class="space-y-2 text-center">
    <h1 class="text-3xl font-semibold text-slate-900">Create your MedTracker account</h1>
    <p class="text-slate-600">Keep everyoneâ€™s medication plan organised in one place.</p>
  </header>

  <%= form_with model: @user, class: "space-y-6" do |form| %>
    <%= form.fields_for :person do |person_form| %>
      <div class="space-y-2">
        <%= person_form.label :name, class: 'block text-sm font-medium text-slate-700' %>
        <%= person_form.text_field :name, required: true, class: 'w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-400' %>
      </div>

      <div class="space-y-2">
        <%= person_form.label :date_of_birth, class: 'block text-sm font-medium text-slate-700' %>
        <%= person_form.date_field :date_of_birth, required: true, class: 'w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-400' %>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= form.label :email_address, class: 'block text-sm font-medium text-slate-700' %>
      <%= form.email_field :email_address, required: true, autocomplete: 'email', class: 'w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-400' %>
    </div>

    <div class="space-y-2">
      <%= form.label :password, class: 'block text-sm font-medium text-slate-700' %>
      <%= form.password_field :password, required: true, autocomplete: 'new-password', class: 'w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-400' %>
    </div>

    <div class="space-y-2">
      <%= form.label :password_confirmation, class: 'block text-sm font-medium text-slate-700' %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: 'new-password', class: 'w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm shadow-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-violet-400' %>
    </div>

    <div class="pt-2">
      <%= render RubyUI::Button::Button.new(type: :submit, class: 'w-full') do %>
        Sign Up
      <% end %>
    </div>
  <% end %>
</div>
