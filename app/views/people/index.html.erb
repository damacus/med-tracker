<div class="container mx-auto px-4 py-8" data-testid="people-list">
  <div class="flex justify-between items-center mb-8">
	<h1 class="text-4xl font-bold text-slate-900">People</h1>
	<% if policy(Person.new).create? %>
	  <%= link_to "New Person", new_person_path,
		  class: "inline-flex items-center justify-center rounded-md font-medium transition-colors px-4 py-2 h-9 text-sm bg-primary text-primary-foreground shadow hover:bg-primary/90",
		  data: { turbo_frame: "modal" } %>
	<% end %>
  </div>

  <%= turbo_frame_tag "modal" %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="people">
	<% @people.each do |person| %>
	  <%= render "person", person: person %>
	<% end %>
  </div>
</div>
