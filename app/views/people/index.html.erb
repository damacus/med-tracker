<div class="container">
  <% if notice %>
	<div class="alert alert--success">
	  <span><%= notice %></span>
	</div>
  <% end %>

  <div class="page-header">
    <h1 class="page-title">People</h1>
    <button type="button" class="button button--primary" onclick="document.getElementById('modal').showModal()">Add Person</button>
  </div>

  <div class="item-grid" id="people">
	<% @people.each do |person| %>
	  <%= render "person", person: person %>
	<% end %>
  </div>

  <dialog id="modal" class="modal">
    <div class="modal__container">
      <div class="modal__header">
        <h2 class="modal__title">Add Person</h2>
        <button class="modal__close" type="button" onclick="this.closest('dialog').close()">&times;</button>
      </div>
      <div class="modal__content">
        <%= render "form", person: Person.new %>
      </div>
    </div>
  </dialog>
</div>
