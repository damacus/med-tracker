<div class="container mx-auto px-4 py-8">
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">People</h1>
    <%= link_to "Add Person", new_person_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @people.each do |person| %>
      <div id="person_<%= person.id %>" class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2"><%= person.name %></h2>
        <p class="text-gray-600 mb-2">Born: <%= person.date_of_birth.strftime("%B %d, %Y") %></p>
        <p class="text-gray-600 mb-4">Age: <%= person.age %></p>
        
        <div class="flex justify-end space-x-2">
          <%= link_to "View", person_path(person), class: "text-blue-500 hover:text-blue-700" %>
          <%= link_to "Edit", edit_person_path(person), class: "text-yellow-500 hover:text-yellow-700" %>
          <%= button_to "Delete", person_path(person), method: :delete, class: "text-red-500 hover:text-red-700",
              form: { data: { turbo_confirm: "Are you sure?" } } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
