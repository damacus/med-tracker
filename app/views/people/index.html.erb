<div class="container">
  <% if notice %>
	<div class="alert alert--success">
	  <span><%= notice %></span>
	</div>
  <% end %>

  <%= link_to "New Person", new_person_path, data: { turbo_frame: "modal" } %>

  <%= turbo_frame_tag "modal" %>

  <div class="item-grid" id="people">
	<% @people.each do |person| %>
	  <%= render "person", person: person %>
	<% end %>
  </div>
</div>
