<div class="min-h-screen">
  <!-- Header -->
  <header class="page-header">
    <div class="container py-4">
      <h1 class="page-title">Medicine Tracker Dashboard</h1>
    </div>
  </header>

  <div class="container py-8 space-y-6">

  <!-- Stats Grid -->
  <div class="stats-grid">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Stats</h2>
    <!-- Total People -->
    <div class="stat-card">
      <div class="stat-content">
        <div class="stat-info">
          <dl>
            <dt class="stat-label">Total People</dt>
            <dd class="stat-value"><%= @people.count %></dd>
          </dl>
        </div>
      </div>
    </div>

    <!-- Active Prescriptions -->
    <div class="stat-card">
      <div class="stat-content">
        <div class="stat-info">
          <dl>
            <dt class="stat-label">Active Prescriptions</dt>
            <dd class="stat-value"><%= @active_prescriptions.count %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h2>
      <div class="flex flex-wrap gap-4">
        <%= link_to new_person_path, class: "button button--primary" do %>
          <svg class="icon icon-xs button-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          Add Person
        <% end %>

        <%= link_to new_medicine_path, class: "button button--success" do %>
          <svg class="icon icon-xs button-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
          </svg>
          Add Medicine
        <% end %>
      </div>
    </div>
  </div>

  <!-- Medication Schedule -->
  <div class="card">
    <div class="card-body">
      <h2 class="text-lg font-medium text-gray-900 mb-6">Medication Schedule by Person</h2>
      <% if @upcoming_prescriptions.any? %>
        <div class="content-grid">
          <% @upcoming_prescriptions.each do |person, prescriptions| %>
            <div class="card">
              <!-- Person Header -->
              <div class="card-header bg-gradient-to-r from-blue-600 to-blue-700">
                <h3 class="text-lg font-medium text-white"><%= person.name %></h3>
                <p class="text-sm text-blue-100">Age: <%= person.age %></p>
              </div>

              <!-- Prescriptions List -->
              <div class="card-body space-y-4">
                <% prescriptions.each do |prescription| %>
                  <div id="prescription_<%= prescription.id %>" class="card">
                    <div class="card-body border-l-4 border-green-500">
                      <div class="flex justify-between items-start">
                        <div class="space-y-1">
                          <p class="font-medium text-gray-900"><%= prescription.medicine.name %></p>
                          <p class="text-sm text-gray-600">Dosage: <%= prescription.dosage %></p>
                          <p class="text-sm text-gray-600">Frequency: <%= prescription.frequency %></p>
                          <% if prescription.end_date %>
                            <p class="text-sm text-gray-500">Ends: <%= prescription.end_date.strftime("%B %d, %Y") %></p>
                          <% end %>
                          
                          <!-- Today's takes -->
                          <div class="mt-3 pt-3 border-t border-gray-100">
                            <p class="text-sm font-medium text-gray-900">Today's takes:</p>
                            <% todays_takes = prescription.take_medicines.today %>
                            <% if todays_takes.any? %>
                              <ul class="mt-1 space-y-1">
                                <% todays_takes.each do |take| %>
                                  <li class="text-sm text-gray-600 flex items-center">
                                    <svg class="icon icon-xs icon--success mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    <%= take.taken_at.strftime("%I:%M %p").sub(/^0/, '') %>
                                  </li>
                                <% end %>
                              </ul>
                            <% else %>
                              <p class="mt-1 text-sm text-gray-500">No medications taken today</p>
                            <% end %>
                          </div>
                        </div>

                        <!-- Take medication button -->
                        <div class="ml-4">
                          <%= button_to prescription_take_medicines_path(prescription),
                              method: :post,
                              class: "button button--sm button--success",
                              data: { test_id: "take-medicine-#{prescription.id}" } do %>
                            <svg class="icon icon-xs button-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Take Now
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto icon icon-lg icon--muted" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No active prescriptions</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding a new prescription.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
