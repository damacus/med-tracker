#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [[ -z "${LD_PRELOAD+x}" ]]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

echo "Installing gems..."
bundle install

# Detect if the command involves running the rails server
is_server=false
if [[ "$*" == *"rails server"* ]] || [[ "$*" == *"rails s"* ]]; then
  is_server=true
fi

# In development, remove stale precompiled assets so Propshaft serves dynamically.
# In other environments, precompile if not already done.
if [[ "$is_server" == "true" ]]; then
  if [[ "$RAILS_ENV" == "development" ]]; then
    if [[ -f "public/assets/.manifest.json" ]]; then
      echo "Removing stale precompiled assets (development uses dynamic serving)..."
      rm -rf public/assets
    fi
  else
    if [[ ! -f "public/assets/.manifest.json" ]]; then
      echo "Precompiling assets..."
      ./bin/rails assets:precompile
    else
      echo "Assets already compiled."
    fi
  fi
fi

# Database preparation (create if missing, migrate if pending)
echo "Preparing database..."
./bin/rails db:prepare

exec "${@}"
